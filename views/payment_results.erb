 <h1>
  Payment Results
</h1>
<%= params %>
<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= params.fetch("user_apr").to_fs(:percentage, {:precision => 4}) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= params.fetch("user_years") %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    $<%= params.fetch("user_pv").to_fs(:currency) %>
  </dd>

  <dt>
    Monthly payment
  </dt>
  <dd>
    <%= @monthly_payment.to_fs(:currency) %>
  </dd>
</dl>

<a href="/payment/new">
  Calculate another payment
</a>
